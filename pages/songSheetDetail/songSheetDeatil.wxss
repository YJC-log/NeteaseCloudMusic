@import "../../iconfont/iconfont";
.songSheet {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  overflow: scroll;
}
.songSheet-header {
  box-sizing: border-box;
  padding: 40rpx 36rpx 140rpx 36rpx;
  display: flex;
  background-color: rgba(124, 124, 124, 0.6);
  position: relative;
}
.background {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: -1;
}
.background image {
  width: 100%;
  height: 100%;
  filter: blur(30rpx);
}
.coverImg {
  width: 280rpx;
  height: 280rpx;
}
.coverImg image {
  width: 280rpx;
  height: 280rpx;
  border-radius: 10rpx;
}
.header-right {
  box-sizing: border-box;
  padding-left: 34rpx;
  position: relative;
  flex: 1;
}
.title {
  padding: 10rpx 20rpx 10rpx 0;
}
.title .text {
  color: #fff;
  letter-spacing: 1rpx;
  font-size: 32rpx;
  /* 显示两行超出打点 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.creator {
  display: flex;
  padding: 30rpx 20rpx 30rpx 0;
  align-items: center;
}
.avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
}
.avatar image {
  width: 50rpx;
  height: 50rpx;
}
.creator .name {
  font-size: 26rpx;
  color: rgb(235, 231, 231);
  padding-left: 16rpx;
}
.creator .iconfont {
  font-size: 24rpx;
  color: rgb(235, 231, 231);
  position: relative;
  top: 3rpx;
}
.desc {
  padding: 10rpx 20rpx 0 0;
  position: absolute;
  left: 34rpx;
  bottom: 20rpx;
}
.desc .text {
  font-size: 20rpx;
  color: rgb(214, 209, 209);
  /* 显示两行超出打点 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.songSheet-content {
  position: absolute;
  left: 0;
  right: 0;
  top: 370rpx;
  background-color: #fff;
  border-radius: 40rpx;
}
.content-header {
  display: flex;
  align-items: center;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}
.icon-zanting {
  font-size: 50rpx;
  padding: 0 24rpx 0 0;
}
.playAll {
  position: relative;
  bottom: 6rpx;
}
.playAll .text1{
  font-size: 30rpx;
}
.playAll .text2{
  font-size: 26rpx;
  line-height: 25rpx;
  color: rgb(150, 150, 150);
  position: relative;
  bottom: 4rpx;
  left: 4rpx;
}
.songList {
  width: 100%;
  position: relative;
}
.song-item {
  display: flex;
  box-sizing: border-box;
  padding: 16rpx 0;
  align-items: center;
  position: relative;
}
.number {
  padding: 0 30rpx;
  width: 50rpx;
  color: rgb(131, 131, 131);
  font-size: 32rpx;
  text-align: center;
}
.song-content {
  width: 70%;
}
.song-content .title {
  font-size: 30rpx;
  /* 显示一行超出打点 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  line-height: 50rpx;
}
.song-content .artist {
  font-size: 26rpx;
  color: rgb(185, 183, 183);
  /* 显示一行超出打点 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.addPlayList {
  position: absolute;
  font-size: 46rpx;
  right: 50rpx;
}