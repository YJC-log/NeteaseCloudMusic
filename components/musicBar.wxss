@import '../iconfont/iconfont';
.musicBar {
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  align-items: center;
  box-sizing: border-box;
  padding: 0 36rpx;
  border-top: 1px solid rgba(7, 17, 27, .1);
}
.musicImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.musicImg image {
  width: 100rpx;
  height: 100rpx;
}
.content {
  margin-left: 30rpx;
  box-sizing: border-box;
  padding: 10rpx 0;
}
.title {
  font-size: 30rpx;
  color: rgb(94, 91, 91);
  padding-top: 6rpx;
}
.singer {
  font-size: 22rpx;
  padding: 6rpx;
  color: rgb(180, 178, 178);
}
.iconfont {
  font-size: 60rpx;
  position: absolute;
  right: 70rpx;
}